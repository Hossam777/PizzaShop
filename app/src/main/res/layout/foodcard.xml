<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_230sdp"
    android:background="@drawable/card_bg"
    android:layout_margin="@dimen/_2sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/foodImage"
        android:elevation="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:contentDescription="@string/image_view_content_description" />
    <TextView
        android:id="@+id/foodName"
        android:text="Pizza"
        android:textStyle="bold"
        android:textColor="@color/item_name"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/foodImage"
        app:layout_constraintTop_toTopOf="@+id/foodImage"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="0dp"
        android:paddingLeft="@dimen/_20sdp"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintRight_toLeftOf="@+id/foodImage"
        app:layout_constraintTop_toBottomOf="@+id/foodName"
        android:layout_width="0dp"
        android:minHeight="@dimen/_30sdp"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/item_description_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:textDirection="ltr"
            android:id="@+id/foodDescription"
            android:paddingStart="@dimen/_10sdp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/foodPrice"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="@+id/foodImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@+id/foodPrice"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rating_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/buybtn"
            android:tint="@color/colorPrimary"
            android:src="@drawable/bag"
            android:background="@color/transparent"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/foodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="@drawable/rating_bg"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/star"/>
        <TextView
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>