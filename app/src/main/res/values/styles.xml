<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="android:textColorPrimary">@color/colorFourth</item>
    </style>
    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/colorFourth</item>
    </style>

    <style name="navbar_item_text">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tabbar_text">
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

</resources>
